{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
      // "@/*": ["./*"]
    },
    "types": [
      //
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/deep-equal",
      "@types/fontfaceobserver",
      "@types/lodash",
      "@types/node",
      "@types/nuxtjs__auth"
    ]
  },
  "exclude": ["node_modules"]
}
